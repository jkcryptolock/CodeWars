function abbrevName(name){
  name = name.split(' ');
  let result = [];;
  for (var i = 0; i < name.length; i++){
    result += name[i][0].toUpperCase() + '.';
  }
  return result.slice(0, -1);
}

//second option, dynamic

function abbrevName(name){
  name = name.split(' ');
  return name[0].charAt(0).toUpperCase() + '.' + name[1].charAt(0).toUpperCase();

}
