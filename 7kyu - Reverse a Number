//https://www.codewars.com/kata/reverse-a-number/javascript

function reverseNumber(n) {
  if (Math.sign(n) === 1){
    return Number(n.toString().split('').reverse().join(''));
  } else if (Math.sign(n) === -1){
    return Number(n.toString().split('-').join('').split('').reverse().join('')) * -1;
  }
}
